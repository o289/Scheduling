<h3 class="text-center"><%= @user.name %>の予定一覧</h3>
<div class="container">
    <div class="row">
        <% @user.tasks.each do |user| %>
            <div class="col">
                <div class="card text-dark bg-light mb-3" style="max-width: 18rem;">
                    <div class="card-header"><%= user.start_time.strftime("%m月%d日") %></div>
                    <div class="card-body">
                        <h5 class="card-title"><%= user.title %></h5>
                        <p class="card-text"><%= user.in_detail%></p>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>
    
    
    

